//Para usar nib => compilar asi stylus -u nib -w -c archivo.styl
@import 'nib'
@import url(http://fonts.googleapis.com/css?family=Montserrat)
@import url(normalize.min.css)

*{
    box-sizing border-box
}

body
    margin 0
    padding 0
    font-size 16px
    font-family: 'Montserrat', sans-serif;


.header
    background-color #6CD4BA
    color #E64C35
    padding 1em
    text-align center
    
@media screen and (max-width: 640px)
    .header
        padding .1em

.form
    display flex
    
  .search--name--artist
    background-color #FFE4B8
    border 4px solid #F0654F
    color #F0654F
    font-size 2.5em
    height: 3em
    flex-basis 100%
  

@media screen and (max-width: 340px)
    .name__artist
        font-size 1rem

.container--artist
    cursor pointer
    display flex
    justify-content space-between
    margin 0
    padding .2em 1em
    
    &:nth-child(odd)
        background-color #F09A85
    &:nth-child(even)
        background-color #F06E60
        
    &:first-child
        border-top 1em solid #6CD4BA

  .name--artist
      color white
      font-size 1.5rem

  .container--artist__image
      max-height 75px